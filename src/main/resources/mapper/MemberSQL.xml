<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.myapp.repository.MemberRepository">

    <insert id="insertMember">
       		INSERT INTO SHOP_MEMBER_TB VALUES(#{memberId}, #{memberPwd}, #{memberLevel},
       		#{memberName}, #{memberAdress}, #{memberTel}, #{memberBirth})
    </insert>
    <select id="findAll" resultType="com.shop.myapp.dto.Member">
			SELECT * FROM SHOP_MEMBER_TB
    </select>
    <select id="checkUserAvailable" resultType="com.shop.myapp.dto.Member">
			SELECT * FROM SHOP_MEMBER_TB WHERE MEMBER_ID = #{memberId}
    </select>
</mapper>